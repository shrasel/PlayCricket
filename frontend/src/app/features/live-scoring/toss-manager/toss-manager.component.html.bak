<div class="max-w-4xl mx-auto">
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-8">
    <!-- Header -->
    <div class="text-center mb-8">
      <div class="inline-flex items-center justify-center h-16 w-16 rounded-full bg-indigo-100 dark:bg-indigo-900 mb-4">
        <svg class="h-8 w-8 text-indigo-600 dark:text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1" />
        </svg>
      </div>
      <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">Toss Details</h2>
      <p class="text-gray-600 dark:text-gray-400">Select the toss winner and their decision</p>
    </div>

    <!-- Toss Winner Selection -->
    <div class="mb-8">
      <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-4">
        Who won the toss?
      </label>
      <div class="grid grid-cols-2 gap-4">
        <!-- Team 1 -->
        <button
          type="button"
          (click)="selectTossWinner(getTeamId(0))"
          [class.ring-2]="selectedTeamId === getTeamId(0)"
          [class.ring-indigo-600]="selectedTeamId === getTeamId(0)"
          [class.bg-indigo-50]="selectedTeamId === getTeamId(0)"
          [class.dark:bg-indigo-900/30]="selectedTeamId === getTeamId(0)"
          class="relative p-6 border-2 border-gray-200 dark:border-gray-700 rounded-lg hover:border-indigo-400 dark:hover:border-indigo-500 transition-all group">
          <div class="flex flex-col items-center">
            <div class="h-20 w-20 rounded-full bg-gradient-to-br from-blue-500 to-blue-600 flex items-center justify-center text-white text-2xl font-bold mb-3">
              {{ getTeamName(0).substring(0, 2).toUpperCase() }}
            </div>
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white text-center">
              {{ getTeamName(0) }}
            </h3>
          </div>
          <div class="absolute top-3 right-3" [class.hidden]="selectedTeamId !== getTeamId(0)">
            <div class="h-8 w-8 rounded-full bg-indigo-600 flex items-center justify-center">
              <svg class="h-5 w-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
            </div>
          </div>
        </button>

        <!-- Team 2 -->
        <button
          type="button"
          (click)="selectTossWinner(getTeamId(1))"
          [class.ring-2]="selectedTeamId === getTeamId(1)"
          [class.ring-indigo-600]="selectedTeamId === getTeamId(1)"
          [class.bg-indigo-50]="selectedTeamId === getTeamId(1)"
          [class.dark:bg-indigo-900/30]="selectedTeamId === getTeamId(1)"
          class="relative p-6 border-2 border-gray-200 dark:border-gray-700 rounded-lg hover:border-indigo-400 dark:hover:border-indigo-500 transition-all group">
          <div class="flex flex-col items-center">
            <div class="h-20 w-20 rounded-full bg-gradient-to-br from-green-500 to-green-600 flex items-center justify-center text-white text-2xl font-bold mb-3">
              {{ getTeamName(1).substring(0, 2).toUpperCase() }}
            </div>
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white text-center">
              {{ getTeamName(1) }}
            </h3>
          </div>
          <div class="absolute top-3 right-3" [class.hidden]="selectedTeamId !== getTeamId(1)">
            <div class="h-8 w-8 rounded-full bg-indigo-600 flex items-center justify-center">
              <svg class="h-5 w-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
            </div>
          </div>
        </button>
      </div>
    </div>

    <!-- Decision Selection -->
    <div class="mb-8 animate-fadeIn" [class.hidden]="!selectedTeamId">
      <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-4">
          What did {{ selectedTeamId === getTeamId(0) ? getTeamName(0) : getTeamName(1) }} choose to do?
        </label>
        <div class="grid grid-cols-2 gap-4">
          <!-- Bat First -->
          <button
            type="button"
            (click)="selectDecision('BAT')"
            [class.ring-2]="selectedDecision === 'BAT'"
            [class.ring-green-600]="selectedDecision === 'BAT'"
            [class.bg-green-50]="selectedDecision === 'BAT'"
            [class.dark:bg-green-900/30]="selectedDecision === 'BAT'"
            class="relative p-6 border-2 border-gray-200 dark:border-gray-700 rounded-lg hover:border-green-400 dark:hover:border-green-500 transition-all">
            <div class="flex flex-col items-center">
              <div class="h-16 w-16 rounded-full bg-green-100 dark:bg-green-900/50 flex items-center justify-center mb-3">
                <svg class="h-8 w-8 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Bat First</h3>
              <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">Choose to bat</p>
            </div>
            <div class="absolute top-3 right-3" [class.hidden]="selectedDecision !== 'BAT'">
              <div class="h-8 w-8 rounded-full bg-green-600 flex items-center justify-center">
                <svg class="h-5 w-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
              </div>
            </div>
          </button>

          <!-- Bowl First -->
          <button
            type="button"
            (click)="selectDecision('BOWL')"
            [class.ring-2]="selectedDecision === 'BOWL'"
            [class.ring-orange-600]="selectedDecision === 'BOWL'"
            [class.bg-orange-50]="selectedDecision === 'BOWL'"
            [class.dark:bg-orange-900/30]="selectedDecision === 'BOWL'"
            class="relative p-6 border-2 border-gray-200 dark:border-gray-700 rounded-lg hover:border-orange-400 dark:hover:border-orange-500 transition-all">
            <div class="flex flex-col items-center">
              <div class="h-16 w-16 rounded-full bg-orange-100 dark:bg-orange-900/50 flex items-center justify-center mb-3">
                <svg class="h-8 w-8 text-orange-600 dark:text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Bowl First</h3>
              <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">Choose to bowl</p>
            </div>
            <div class="absolute top-3 right-3" [class.hidden]="selectedDecision !== 'BOWL'">
              <div class="h-8 w-8 rounded-full bg-orange-600 flex items-center justify-center">
                <svg class="h-5 w-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
              </div>
            </div>
          </button>
        </div>
      </div>
    </div>

    <!-- Summary & Submit -->
    <div class="mt-8 p-4 bg-indigo-50 dark:bg-indigo-900/30 rounded-lg border border-indigo-200 dark:border-indigo-800 animate-fadeIn" [class.hidden]="!isValid">
        <div class="flex items-start">
          <div class="flex-shrink-0">
            <svg class="h-6 w-6 text-indigo-600 dark:text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div class="ml-3 flex-1">
            <p class="text-sm text-indigo-700 dark:text-indigo-300">
              <strong>{{ selectedTeamId === getTeamId(0) ? getTeamName(0) : getTeamName(1) }}</strong> won the toss and chose to 
              <strong>{{ selectedDecision === 'BAT' ? 'bat first' : 'bowl first' }}</strong>
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="mt-8 flex justify-end">
      <button
        type="button"
        (click)="submitToss()"
        [disabled]="!isValid"
        [class.opacity-50]="!isValid"
        [class.cursor-not-allowed]="!isValid"
        class="px-6 py-3 bg-indigo-600 text-white font-medium rounded-lg hover:bg-indigo-700 disabled:hover:bg-indigo-600 transition-colors flex items-center space-x-2">
        <span>Continue to Team Lineup</span>
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
        </svg>
      </button>
    </div>
  </div>
</div>
